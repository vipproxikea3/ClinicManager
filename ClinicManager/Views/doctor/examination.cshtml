</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <div id="Sidebar">
            <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">

                <!-- Sidebar - Brand -->
                <a class="sidebar-brand d-flex align-items-center justify-content-center" href="/home">
                    <div class="sidebar-brand-icon">
                        <i class="fas fa-heartbeat"></i>
                    </div>
                    <div class="sidebar-brand-text mx-3">Quản lý phòng khám</div>
                </a>

                <!-- Divider -->
                <hr class="sidebar-divider my-0">

                <!-- Nav Item - Home -->
                <li class="nav-item">
                    <a class="nav-link" href="/home">
                        <i class="fas fa-fw fa-home"></i>
                        <span>Trang chủ</span></a>
                </li>

                <!-- Divider -->
                <hr class="sidebar-divider">

                <!-- Heading -->
                <div class="sidebar-heading">
                    CHUNG
                </div>

                <!-- Nav Item - Patients -->
                <li class="nav-item">
                    <a class="nav-link" href="/community/patients">
                        <i class="fas fa-fw fa-user-injured"></i>
                        <span>Bệnh nhân</span></a>
                </li>

                <!-- Nav Item - Health Records -->
                <li class="nav-item">
                    <a class="nav-link" href="/community/health_records">
                        <i class="fas fa-fw fa-file-medical-alt"></i>
                        <span>Hồ sơ khám bệnh</span></a>
                </li>

                <div id="sidebarReceptionist">
                </div>

                <div id="sidebarDoctor">
                </div>

                <div id="sidebarManager">
                </div>

            </ul>
        </div>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <div id="Topbar">
                    <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">

                        <span class="ml-2 text-lg text-gray-600">doctor</span>

                        <!-- Topbar Navbar -->
                        <ul class="navbar-nav ml-auto">

                            <!-- Nav Item - User Information -->
                            <li class="nav-item dropdown no-arrow">
                                <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button"
                                    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <span id="profileName" class="mr-2 d-none d-lg-inline text-gray-600 small"></span>
                                    <img id="profileAvatar" class="img-profile rounded-circle">
                                </a>
                                <!-- Dropdown - User Information -->
                                <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in"
                                    aria-labelledby="userDropdown">
                                    <a class="dropdown-item" href="/manager/profile">
                                        <i class="fas fa-user fa-sm fa-fw mr-2 text-gray-400"></i>
                                        Cá nhân
                                    </a>
                                    <a class="dropdown-item" href="/login" data-toggle="modal"
                                        data-target="#logoutModal">
                                        <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                                        Đăng xuất
                                    </a>
                                </div>
                            </li>
                        </ul>
                    </nav>

                    <!-- Logout Modal-->
                    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog"
                        aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">Sẵn sàng đăng xuất?</h5>
                                </div>
                                <div class="modal-body">Chọn "Đăng xuất" bên dưới nếu bạn đã sẵn sàng kết thúc phiên
                                    hiện tại của mình.</div>
                                <div class="modal-footer">
                                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Hủy</button>
                                    <a class="btn btn-primary" href="/login">Đăng xuất</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div style="min-height: 600px;" class="container-fluid">

                    <!-- Page Heading -->
                    <div class="d-sm-flex align-items-center justify-content-between mb-4">
                        <h1 class="h3 mb-0 text-gray-800">Khám bệnh</h1>
                    </div>
                    <button type="button" class="btn btn-success mb-3" data-toggle="modal" data-target="#myModal"
                        onclick="return getQueues();"><i class="fas fa-file-medical mr-3"></i>Danh sách chờ
                        khám</button>
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Thông tin hồ sơ</h6>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-4">
                                    <label>Bệnh nhân</label>
                                </div>
                                <div class="col-md-8">
                                    <p class="text-uppercase" id="patient_Name"></p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4">
                                    <label>Mã hồ sơ</label>
                                </div>
                                <div class="col-md-8">
                                    <p id="idHealthRecord"></p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4">
                                    <label>Ngày khám bệnh</label>
                                </div>
                                <div class="col-md-8">
                                    <p id="createAt"></p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4">
                                    <label>Loại hồ sơ</label>
                                </div>
                                <div id="isExamination" class="col-md-8">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Khám bệnh</h6>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-2">
                                    <label>Triệu chứng</label>
                                </div>
                                <div class="col-md-10">
                                    <input type="text" class="form-control" id="symptom" placeholder="Triệu chứng"
                                        disabled="true">
                                </div>
                            </div>
                            <div class="row mt-3">
                                <div class="col-md-2">
                                    <label>Chẩn đoán</label>
                                </div>
                                <div class="col-md-10">
                                    <input type="text" class="form-control" id="diagnosis" placeholder="Chẩn đoán"
                                        disabled="true">
                                </div>
                            </div>
                            <div class="row mt-3">
                                <div class="col-md-2">
                                    <label>Ngày tái khám</label>
                                </div>
                                <div class="col-md-10 input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <input id="willReExamination" onclick="return setWillReExamination();"
                                                type="checkbox" disabled="true">
                                        </span>
                                    </div>
                                    <input type="date" class="form-control" id="reExaminationAt"
                                        placeholder="Ngày tái khám" disabled="true">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Toa thuốc</h6>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-3"><input type="text" class="form-control" id="medicineName"
                                        placeholder="Tên thuốc"></div>
                                <div class="col-md-3"><input type="text" class="form-control" id="unit"
                                        placeholder="Đơn vị tính"></div>
                                <div class="col-md-2"><input type="number" min="1" step="1" class="form-control" id="count"
                                        placeholder="Số lượng"></div>
                                <div class="col-md-3"><input type="text" class="form-control" id="userManual"
                                        placeholder="Cách sử dụng"></div>
                                <div class="col-md-1"><button id="addPrescription" type="button" class="btn btn-success col" onclick="return addPrescription();"><i
                                            class="fas fa-plus"></i></button></div>
                            </div>
                            <div class="table-responsive mt-3">
                                <table class="table table-bordered" id="prescriptionTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>Tên thuốc</th>
                                            <th>Đơn vị tính</th>
                                            <th>Số lượng</th>
                                            <th>Cách sử dụng</th>
                                            <th>Thao tác</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <button id="saveButton" type="button" class="btn btn-lg btn-success mb-3" onclick="return save();"><i
                            class="fas fa-save mr-3"></i> Lưu</button>
                </div>
                <!-- /.container-fluid -->

                <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
                    aria-hidden="true">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h4 class="modal-title" id="myModalLabel">Danh sách chờ khám</h4>
                            </div>
                            <div class="modal-body">
                                <div class="table-responsive">
                                    <table class="table table-bordered" id="queueTable" width="100%" cellspacing="0">
                                        <thead>
                                            <tr>
                                                <th>Stt</th>
                                                <th>Bệnh nhân</th>
                                                <th>Thao tác</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-default" data-dismiss="modal">Thoát</button>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>SE100.L11 | 18521314 - 18520100 - 18521293 - 18520132</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>
</body>

