                    </div>

                    <div class="row">
                        <div class="input-group mb-3 col-md-3">
                            <input id="inputYear" type="number" class="form-control" placeholder="Năm">
                            <div class="input-group-append">
                                <button class="btn btn-outline-secondary" type="button" onclick="return selectYear();"><i class="fas fa-search"></i></button>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-xl-4 col-md-4 mb-4">
                            <div class="card border-left-primary shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                                Tổng số bệnh nhân</div>
                                            <div id="totalPatientOfYear" class="h5 mb-0 font-weight-bold text-gray-800">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-xl-4 col-md-4 mb-4">
                            <div class="card border-left-success shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Tổng số phiếu khám
                                            </div>
                                            <div id="totalHealthRecordOfYear" class="h5 mb-0 font-weight-bold text-gray-800">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-xl-4 col-md-4 mb-4">
                            <div class="card border-left-warning shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">Tổng doanh thu
                                            </div>
                                            <div id="totalRevenueOfYear" class="h5 mb-0 font-weight-bold text-gray-800">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card shadow col-md-12 mb-4">
                        <div class="card-body row">
                            <div class="chart-area col-md-8">
                                <canvas id="yearAreaChart"></canvas>
                            </div>
                            <div class="chart-pie col-md-4">
                                <canvas id="yearPieChart"></canvas>
                            </div>
                        </div>
                    </div>

